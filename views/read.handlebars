<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
<script type="text/javascript" src="/read.js"></script>
<title>{{ch.booktitle}}</title>
<link rel="stylesheet" href="/main.css" type="text/css" />
<meta http-equiv="Content-Type" content="application/xhtml+xml; charset=utf-8" />

</head>
<header>
<h1>{{ch.title}}</h1>
<h2>{{ch.subtitle}}</h2>
</header>
<body>
<main>
    {{#each ch.content}}
        {{#if p}}
            <p id="main"> {{p}}</p>
        {{else if blockquote}}
            <blockquote>{{blockquote}}</blockquote>
        {{else if img}}
            <img src="{{img}}">
        {{/if}}
    {{/each}}
</main>

<div id="menu"> 
    <ul>
        <li id="copyButton">Copy</li>
        <li id="newnoteButton">Add Note</li>
        <li id="viewNotesButton">View Notes</li>
        <li id="idiomButton">Search Idiom</li>
        <li id="settingsButton">Display Settings</li>
    </ul>
</div>
<div id="notes">
    <ol>
        <li>
            <textarea id="noteText" name="noteText"></textarea>
        </li>
        <li>
            <button value="Save Note" id="saveNote">Save Note</button>
        </li>
        <li>
            <input type="hidden" id="highlighted" name="highlighted">
        </li>
    </ol>
</div>
<div id="messages">
    <ol>
        <li>
            <h1 id="messageHeading"></h1>
        </li>
        <li>
            <p id="messageContents"></p>
        </li>
    </ol>
</div>
<div id="display">
    <ol>
        <li>
            <h1>Display Settings</h1>
        </li>
        <li>
        <label for="font">Typeface</label>
        
        <select id="font">
            <option value="Arial">Arial</option>
            <option value="Georgia">Georgia</option>
            <option value="Times New Roman">Times New Roman</option>
            <option value="Verdana">Verdana</option>
        </select>
        </li>
        <li>
            <label for="textSize">Text size</label>
            <input type="number" id="textSize" value="0">
        </li>
        <li>
            <label for="lineHeight">Line height</label>
            <input type="number" id="lineHeight" value="0">
        </li>
        <li>
            <label>Book shade</label>
            <select id="colourOverlay">
                <option value="white">White</option>
                <option value="grey">Grey</option>
                <option value="black">Black</option>
            </select>
            <input type="range" id="layerOpacity" min="0" max="70" value="0">
        </li>
    </ol>
</div>
<div id="lightLayer"></div>
<div id="stopClick"></div>
<footer>
    <ul>
        {{#if ch.prev}}
            <li><a href="{{ch.prev}}"> Previous Chapter </a></li>
        {{/if}}
        <li><a href="/book/{{ch.bookid}}"> Table of Contents </a></li>
        {{#if ch.next}}
            <li><a href="{{ch.next}}">Next Chapter</a></li>
        {{/if}}
    </ul>
</footer>
</body>
</html>
